.header
	background: $white
	padding: 0
	border-bottom: 1px solid #dbdbdb
	@extend .lc
.logo
	float: left
	max-width: 12.8rem
	margin: 0.64rem
	@media all and (min-width: $bp-med)
		max-width: 14.4rem
.nav-toggle
	float: right
	display: block
	padding: 1.44rem 1.6rem 1.12rem
	font-size: 2.08rem
	line-height: 1
	border-left: 1px solid #dbdbdb
	&:focus
		color: $gray-dark
	&:hover
		color: $gray
	@media all and (min-width: $bp-med)
		display: none
.toggle-open
	max-height: none !important
.search-form
	float: right
	overflow: hidden
	max-height: 0
	@media all and (min-width: $bp-med)
		max-height: none
		margin: 0.65em 0.5em 0 0
