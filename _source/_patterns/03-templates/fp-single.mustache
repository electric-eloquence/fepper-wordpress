<div class="page" id="page">
	<div role="main">
		<div class="l-two-col">
			<div class="l-main">
				{{# article }}
					<article class="article">
						<header class="article-header">
							<h1>{{ article_title }}</h1>
							{{> 01-molecules/00-text/01-byline-author-time }}
						</header>
						{{> 02-organisms/01-article/00-article-body }}
					</article><!--end .article-->
					{{> 02-organisms/02-comments/00-comment-thread }}
				{{/ article }}
			</div><!--end l-main-->

			<div class="l-sidebar">
				{{> 02-organisms/04-sections/02-related-posts }}
				{{> 02-organisms/04-sections/01-recent-comments }}
			</div><!--end l-sidebar-->
		</div><!--end l-two-col-->
	</div><!--End role=main-->
</div>
